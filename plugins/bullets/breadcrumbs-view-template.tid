\define show-breadcrumbs()
<$list filter="[<currentTiddler>has[sq-bullet-uuid]]">
	<$list filter="[<currentTiddler>has[sq-bullet-parent]]">
		<$set name="currentTiddler" filter="[sq-bullet-uuid{!!sq-bullet-parent}]" select="0">
			<<show-breadcrumbs>>
		</$set>
	</$list>	
	<$list filter="[<currentTiddler>!match<storyTiddler>]">
		<$wikify name="display-title" text={{{ [<currentTiddler>get[text]!is[blank]] ~[{!!title}] }}}>
			<span class="sq-breadcrumbs-fragment">
			<$link to=<<currentTiddler>>>
				<$text text={{{ [<display-title>split[]first[50]join[]] }}}/>
			</$link>>
			</span>
		</$wikify>
	</$list>
</$list>
\end

<<show-breadcrumbs>>

